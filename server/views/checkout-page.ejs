    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Delivery Address</span>
      <input type="text" id="delivery-address" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">City/Town</span>
      <input type="text" id="delivery-town" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">State/Region</span>
      <input type="text" id="delivery-state-region" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Country</span>
      <input type="text" id="delivery-country" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Zip Code</span>
      <input type="text" id="delivery-zip" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    <button type="submit" class="btn btn-primary check-out-btn"><i class="fa-regular fa-credit-card"></i> Pay With Credit Card</button>
    <button type="submit" class="btn btn-success bitcoin-check-out"><i class="fa-brands fa-bitcoin"></i> Pay With Bitcoin</button>
