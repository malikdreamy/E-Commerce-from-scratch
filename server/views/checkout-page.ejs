    <div class="container">
        <div class="row gy-3 gx-5 products text-center">
    
    
<% if(cart.length > 0){%>
    <%for(let i = 0; i< cart.length; i++){%>
              <div class="col-md-3 col-lg-4 product" id=<%=cart[i].product._id %> >
    <div class="card" >
      <img src='<%= cart[i].product.mainImage %>' class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"></h5>
        <h2><%=cart[i].product.productName %></h2>
        <h3>$<%= cart[i].product.price%></h3>
        <h3>Size: <%= cart[i].size %> </h3>
        <p class="card-text"></p>
        <button class="btn btn-danger remove-from-cart">Remove From Cart</button>
      </div>
    </div>

    </div>
<%}} else {%>
<h1>No Items</h1>
<% }%>


<% if(cart.length > 0){%>
    <% let price = 0 %>
    <% const getPrice = () => { %>
    <% for(let i = 0; i < cart.length; i++){ %>
        
       <% price += Number(cart[i].product.price) %>
       
        <%}%>
    <%return price;%>
    <%}%>


    <div id='total'><h2>Total: $<%=getPrice() %></h2> </div>

<%} else {%>
    <div id='total'><h2>Total: 0</h2> </div>

    <%}%>
    
    <p style="color: red;">All credit card payments are process through a secure and encrypted checkout window. For credit card transactions
      delivery and billing addresses must be the same. For bitcoin payments only delivery information and email is required.
    </p>

    <div id="billing-address-form">
    <div class="input-group mt-3">
       <h4 class="col-12" style="display: 'block';">Billing Address</h4>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">First Name</span>
      <input type="text" id="billing-first-name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Last Name</span>
      <input type="text" id="billing-last-name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Phone Number</span>
      <input type="text" id="billing-phone" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Delivery Address</span>
      <input type="text" id="billing-address" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">City/Town</span>
      <input type="text" id="billing-city-town" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">State/Region</span>
      <input type="text" id="billing-state-region" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Country</span>
      <input type="text" id="billing-country" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Zip Code</span>
      <input type="text" id="billing-zip" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    </div>
    
    
    <form id="delivery-address-form">
    <div class="input-group mb-3">
       <h3 class="col-12" style="display: 'block';">Delivery Address</h3>
      <span class="input-group-text" id="basic-addon1">Email</span>
      <input type="text" id="delivery-email" class="form-control" placeholder="Email Address" aria-label="Username" aria-describedby="basic-addon1"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">First Name</span>
      <input type="text" id="delivery-first-name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Last Name</span>
      <input type="text" id="delivery-last-name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Phone Number</span>
      <input type="text" id="delivery-phone" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
